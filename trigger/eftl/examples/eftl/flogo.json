{
  "name": "eftl",
  "type": "flogo:app",
  "version": "1.0.0",
  "description": "This is a EFTL Trigger",
  "properties": null,
  "channels": null,
  "triggers": [
    {
      "name": "tibco-eftl",
      "id": "flogo-eftl",
      "ref": "github.com/project-flogo/contrib/trigger/eftl",
      "settings": {
        "url": "ws://localhost:9191/channel",
        "id": "eftl",
        "user": "",
        "password": ""
      },
      "handlers": [
        {
          "settings": {
            "dest": "sample",
            "Condition": "true"
          },
          "actions": [
            {
              "id": "sampleService"
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "sampleService",
      "compressed": false,
      "data": {
        "name": "Pets",
        "steps": [
          {
            "service": "PetStorePets",
            "input": {
              "pathParams.petId": "1"
            }
          }
        ],
        "responses": [
          {
            "if": "$.PetStorePets.outputs.result.status != 'available'",
            "error": true,
            "output": {
              "code": 403,
              "data": {
                "error": "Failure"
              }
            }
          },
          {
            "if": "$.PetStorePets.outputs.result.status == 'available'",
            "error": false,
            "output": {
              "code": 200,
              "data": "=$.PetStorePets.outputs.result"
            }
          }
        ],
        "services": [
          {
            "name": "PetStorePets",
            "description": "Get pets by ID from the petstore",
            "ref": "github.com/project-flogo/contrib/activity/rest",
            "settings": {
              "uri": "http://localhost:8181/a",
              "method": "POST"
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/microgateway",
      "settings": {
        "uri": "sampleService"
      },
      "id": "sampleService",
      "metadata": null
    }
  ]
}