{
  "name": "wstrigger",
  "type": "flogo:app",
  "version": "1.0.0",
  "description": "This is a Web Socket Trigger",
  "properties": null,
  "channels": null,
  "triggers": [
    {
      "name": "tibco-wssub",
      "id": "flogo-WSMessageTrigger",
      "ref": "github.com/project-flogo/contrib/trigger/websocket/trigger/websocket",
      "settings": {
        "port": "9096",
        "enableTLS": false,
        "serverCert": "",
        "serverKey": "",
        "enableClientAuth": false,
        "trustStore": ""
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/ws",
            "mode": "1",
            "basicAuthFile": ""
          },
          "actions": [
            {
              "id": "microgateway:wsproxy"
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "microgateway:wsproxy",
      "compressed": false,
      "data": {
        "name": "wsproxy",
        "steps": [
          {
            "service": "ProxyWebSocketService",
            "input": {
              "wsconnection": "=$.payload.wsconnection"
            }
          }
        ],
        "responses": [
        ],
        "services": [
          {
            "name": "ProxyWebSocketService",
            "description": "Web socket service",
            "ref": "github.com/project-flogo/contrib/trigger/websocket/activity/wsproxy",
            "settings": {
              "uri": "ws://localhost:8080/ws",
              "maxconnections": "2"
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/microgateway",
      "settings": {
        "uri": "microgateway:wsproxy"
      },
      "id": "microgateway:wsproxy",
      "metadata": null
    }
  ]
}