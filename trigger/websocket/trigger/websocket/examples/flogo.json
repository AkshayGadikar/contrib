{
  "name": "wstrigger",
  "type": "flogo:app",
  "version": "1.0.0",
  "description": "This is a Web Socket Trigger",
  "properties": null,
  "channels": null,
  "triggers": [
    {
      "name": "tibco-wssub",
      "id": "flogo-WSMessageTrigger",
      "ref": "github.com/project-flogo/contrib/trigger/websocket/trigger/websocket",
      "settings": {
        "port": "9096"
      },
      "handlers": [
        {
          "settings": {
            "method": "GET",
            "path": "/ws",
            "mode": "1",
            "enableTLS": false,
            "serverCert": "",
            "serverKey": "",
            "enableClientAuth": false,
            "trustStore": "",
            "basicAuthFile": ""
          },
          "actions": [
            {
              "id": "microgateway:Pets"
            }
          ]
        }
      ]
    }
  ],
  "resources": [
    {
      "id": "microgateway:Pets",
      "compressed": false,
      "data": {
        "name": "Pets",
        "steps": [
          {
            "service": "PetStorePets"
          }
        ],
        "responses": [
        ],
        "services": [
          {
            "name": "PetStorePets",
            "description": "Get pets by ID from the petstore",
            "ref": "github.com/project-flogo/contrib/activity/rest",
            "settings": {
              "uri": "http://petstore.swagger.io/v2/pet/4",
              "method": "GET"
            }
          }
        ]
      }
    }
  ],
  "actions": [
    {
      "ref": "github.com/project-flogo/microgateway",
      "settings": {
        "uri": "microgateway:Pets"
      },
      "id": "microgateway:Pets",
      "metadata": null
    }
  ]
}